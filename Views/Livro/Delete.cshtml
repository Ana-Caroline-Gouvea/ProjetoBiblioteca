@model ProjetoBiblioteca.Models.Livro

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que quer deletar este livro?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LivroNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LivroAutor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LivroAutor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero.GeneroNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LivroId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <button><a asp-action="Index">Voltar</a></button>
    </form>
</div>
