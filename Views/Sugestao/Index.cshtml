@model IEnumerable<ProjetoBiblioteca.Models.Sugestao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescSugestao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.PessoaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescSugestao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SugestaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SugestaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SugestaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
