@model ProjetoBiblioteca.Models.Devolucao

@{
    ViewData["Title"] = "Criar";
}
<link rel="stylesheet" href="~/css/emprestimocriarcss.css" asp-append-version="true" />
<div class="titulo">
    <span>Devolução</span>
</div>


<div class="geral" >
    <div class="box-1">

    </div>
    <div class="row">
    <div class="col-md-7">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Emprestimo" class="control-label"></label>
                <select asp-for="EmprestimoId" class ="form-control" asp-items="ViewBag.EmprestimoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataDevolucao" class="control-label"></label>
                <input asp-for="DataDevolucao" class="form-control" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>

            <a class="ajuda" href="#">Precisa de ajuda?</a>
                       <div class="gebotao">
                    <div class="form-group">
                        <input type="submit" value="Devolver" class="btn btn-priary" />
                    </div>
                    <button class="vol"><a asp-action="Index">Voltar</a></button>
                </div>
        </form>
    </div>
</div>
<div class="box-3">

</div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
