@model IEnumerable<ProjetoBiblioteca.Models.Emprestimo>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/BarraPesquisa.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/hover.css" asp-append-version="true" />

<h1>Empréstimo</h1>


<div>
    @using (Html.BeginForm("Index", "Emprestimo", FormMethod.Get))
    {
        <button class="hover"><a class="" asp-action="Create">Emprestar</a></button>
        <p class="search">
            Buscar: @Html.TextBox("pesquisa")
            <input class="pesquisa" type="submit" value="Pesquisar" />
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmprestimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DevolucaoPrevista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devolvido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.PessoaNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Livro.LivroNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEmprestimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DevolucaoPrevista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Devolvido)
            </td>
            <td>
                
                    <button class="hover"><a asp-action="Edit" asp-route-id="@item.EmprestimoId">Editar</a></button> |
                    <button class="hover"><a asp-action="Details" asp-route-id="@item.EmprestimoId">Detalhes</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
